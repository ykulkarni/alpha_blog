
<div class="well well-large">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-4">
        <h2> Login to Alpha Blog </h2>
    </div>
    <div class="col-sm-12">
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f|%>
        <div class="form-group">
            <div class="col-sm-3 control-label"><%= f.label :email %></div>
            <div class="col-sm-6"><%= f.email_field :email, class: "form-control" %></div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label"><%= f.label :password %></div>
            <div class="col-sm-6"><%= f.password_field :password, class: "form-control" %></div>
        </div> 
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-3"><%= f.submit("Login", class: "btn btn-primary btn-medium") %></div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-4 col-sm-offset-3">
        <%= link_to "Cancel request and return to articles listing", articles_path %> 
    </div>
  </div>
</div>

