<div class="well">
  <p>
    <strong> Title :  </strong> <%= @article.title %><br>
    <label> Description : </label> <%= @article.description %>
  </p>

  <div class="article_actions">
    <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-primary"%> | 
    <%= link_to "Delete Article",  articles_path(@article), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete"} %> |
    <%= link_to "Back to Listing", articles_path, class: "btn btn-success" %>
  </div>
</div>