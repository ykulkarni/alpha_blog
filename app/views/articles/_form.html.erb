<% if @article.errors.any? %>
<h2>
  Error while article creation
</h2>
  <% @article.errors.full_messages.each do |message|%>
    <li> <%= message %></li>
  <%end%>
<% end %>

<%= form_for @article do |f|%>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>  

<p>
  <%= f.submit %>
</p>  
<% end %>

<%= link_to "Back to Listing", articles_path %>