<% if @article.errors.any? %>
<h2>
  Error while article creation
</h2>
  <% @article.errors.full_messages.each do |message|%>
    <li> <%= message %></li>
  <%end%>
<% end %>

  <div class="row">
    <div class="col-sm-12">
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f|%>
      
        <div class="form-group">
            <div class="col-sm-3 control-label"><%= f.label :title %></div>
            <div class="col-sm-6"><%= f.text_field :title, class: "form-control", autofocus: true %></div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 control-label"><%= f.label :description %></div>
            <div class="col-sm-6"><%= f.text_area :description, rows: 10, class: "form-control" %></div>
        </div> 
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-3"><%= f.submit class: "btn btn-primary btn-medium" %></div>
        </div>
      <% end %>
    </div>
  </div>

<%= link_to "Back to Listing", articles_path %>