<div align="center">
    <h2>Create New Category</h2>
</div>
<%= render "shared/errors", obj: @category %>
<div class="row">
<div class="col-sm-12">
  <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f|%>
  
    <div class="form-group">
        <div class="col-sm-3 control-label"><%= f.label :name %></div>
        <div class="col-sm-6"><%= f.text_field :name, class: "form-control", autofocus: true %></div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-3"><%= f.submit class: "btn btn-primary btn-medium" %></div>
    </div>
  <% end %>
</div>
</div>
